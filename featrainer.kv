<AppScreenManager>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<InitialScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            height: 170
            size_hint: (1,None)
            Image:
                source: 'resources/logo.png'
                on_touch_down: app.showScreen('initial')
            Label:
                text: 'Initial'
                color: 0,0,0,1
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Introduction'
                on_press: app.showScreen('introduction')
            Button:
                text: 'Basic training'
                on_press: app.showScreen('basic')
            Button:
                text: 'Advanced modes'
                on_press: app.showScreen('advanced')
            Button:
                text: 'Settings'
                on_press: app.showScreen('settings')
        Label:
            color: 0,0,0,1
            text: 'Ok'

<BasicScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            height: 170
            size_hint: (1,None)
            Image:
                source: 'resources/logo.png'
                on_touch_down: app.showScreen('initial')
            Label:
                text: 'Basic ear training'
                color: 0,0,0,1
        GridLayout:
            cols: 2
            Button:
                text: 'The Major Scale'
                on_press: app.showExerciseListScreen('basic-major')
            Button:
                text: 'Chromatics in a Major Context'
                on_press: app.showExerciseListScreen('basic-major-chromatics')
            Button:
                text: 'The Minor Scale'
                on_press: app.showExerciseListScreen('basic-minor')
            Button:
                text: 'Chromatics in a Minor Context'
                on_press: app.showExerciseListScreen('basic-minor-chromatics')
        Label:
            color: 0,0,0,1
            text: 'Ok'

<IntroductionScreen>:
    BoxLayout:
        orientation: 'vertical'
        AppHeader:
        #BoxLayout:
            id: 'mainwid'
            orientation: 'horizontal'
            height: 170
            size_hint: (1,None)
            Image:
                source: 'resources/logo.png'
                on_touch_down: app.showScreen('initial')
            Label:
                text: 'Introduction to the method'
                color: 0,0,0,1
        RstDocument:
            id: 'thedoc'
            background_color: 1, 1, 1, 1
            text: root.getDocument()

<ExerciseListScreen>:
    BoxLayout:
        id: youfreak
        orientation: 'vertical'
        AppHeader:
            id: app_header
        GridLayout:
            id: exercise_list_grid
            cols: 2

<AppHeader>:
    #screen_title: 'WAT!'
    #id: app_header
    orientation: 'horizontal'
    height: 170
    size_hint: (1,None)
    Image:
        source: 'resources/logo.png'
        on_touch_down: app.showScreen('initial')
    Label:
        id: 'label_id'
        text: root.screen_title
        color: 0,0,0,1

