<AppScreenManager>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<InitialScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            height: 170
            size_hint: (1,None)
            Image:
                source: 'resources/logo.png'
                on_touch_down: app.showScreen('initial')
            Label:
                text: 'Initial'
                color: 0,0,0,1
        BoxLayout:
            orientation: 'vertical'
            padding: 16,16,16,16
            spacing: 4
            Button:
                text: 'Introduction'
                on_press: app.showScreen('introduction')
            Button:
                text: 'Basic training'
                on_press: app.showScreen('basic')
            Button:
                text: 'Advanced modes'
                on_press: app.showScreen('advanced')
            Button:
                text: 'Settings'
                on_press: app.showScreen('settings')
        Label:
            color: 0,0,0,1
            text: 'Ok'

<BasicScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            height: 170
            size_hint: (1,None)
            Image:
                source: 'resources/logo.png'
                on_touch_down: app.showScreen('initial')
            Label:
                text: 'Basic ear training'
                color: 0,0,0,1
        GridLayout:
            cols: 2
            padding: 16,16,16,16
            spacing: 4
            Button:
                text: 'The Major Scale'
                on_press: app.showExerciseListScreen('basic-major')
            Button:
                text: 'Chromatics in a Major Context'
                on_press: app.showExerciseListScreen('basic-major-chromatics')
            Button:
                text: 'The Minor Scale'
                on_press: app.showExerciseListScreen('basic-minor')
            Button:
                text: 'Chromatics in a Minor Context'
                on_press: app.showExerciseListScreen('basic-minor-chromatics')
        Label:
            color: 0,0,0,1
            text: 'Ok'

<IntroductionScreen>:
    BoxLayout:
        orientation: 'vertical'
        AppHeader:
            screen_title: 'Introduction to the Method'
        RstDocument:
            id: 'thedoc'
            background_color: 1, 1, 1, 1
            text: root.getDocument()

<ExerciseListScreen>:
    BoxLayout:
        id: youfreak
        orientation: 'vertical'
        AppHeader:
            id: app_header
        GridLayout:
            id: exercise_list_grid
            cols: 2
            padding: 16,16,16,16
            spacing: 4

<ExerciseScreen>:
    BoxLayout:
        id: exercise_screen
        orientation: 'vertical'
        ExerciseHeader:
            id: exercise_header
        BoxLayout:
            id: repeat_resolve_screen
            orientation: 'horizontal'
            Button:
                text: 'Repeat'
            Button:
                text: 'Play the correct Answer'
        BoxLayout:
            id: interval_buttons
            orientation: 'vertical'
            BoxLayout:
                id: interval_chromatics
                padding: 16,28,16,4
                spacing: 4
                Label:
                    size_hint: (0.5, 1)
                Button:
                    text: 'b2'
                Button:
                    text: 'b3'
                Label:
                    size_hint: (1, 1)
                Button:
                    text: '#4'
                Button:
                    text: 'b6'
                Button:
                    text: 'b7'
                Label:
                    size_hint: (1.5, 1)
            BoxLayout:
                id: interval_scale_tones
                padding: 16,0,16,32
                spacing: 4
                Button:
                    text: '1'
                Button:
                    text: '2'
                Button:
                    text: '3'
                Button:
                    text: '4'
                Button:
                    text: '5'
                Button:
                    text: '6'
                Button:
                    text: '7'
                Button:
                    text: '8'
        BoxLayout:
            id: correct_and_incorrect
            orientation: 'horizontal'
            Label:
                markup: 'true'
                text: '[color=666666]1[/color][color=333333]/[/color][color=999999]20[/color]'
            Label:
                markup: 'true'
                text: '[color=00ff00]0+[/color] [color=ff0000]0+[/color]'

<ExerciseButton>:
    on_press: app.showExercise(self.config_dict)

<AppHeader>:
    orientation: 'horizontal'
    height: 170
    size_hint: (1,None)
    Image:
        source: 'resources/logo.png'
        on_touch_down: app.showScreen('initial')
    Label:
        id: 'label_id'
        text: root.screen_title
        color: 0,0,0,1

<ExerciseHeader>:
    orientation: 'horizontal'
    height: 90
    size_hint: (1,None)
    Image:
        source: 'resources/logo.png'
        on_touch_down: app.showScreen('initial')
    Label:
        id: 'label_id'
        text: root.screen_title
        color: 0,0,0,1
